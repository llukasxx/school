<p id="notice"><%= notice %></p>

<%= link_to "<< Back", admin_path, role: "botton", class: "btn btn-primary btn-lg"%>
<br><br>

<div class="panel panel-success">
  <!-- Default panel contents -->
  <div class="panel-heading table-head">Listing Lessons</div>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>
    </thead>


    <tbody>
      <% @lessons.each do |lesson| %>
        <tr>
          <td><%= lesson.name %></td>
          <td>
            <%= link_to 'Show', admin_lesson_path(lesson), class: "btn btn-sm btn-success", role: "button" %>
            <%= link_to 'Edit', edit_admin_lesson_path(lesson), class: "btn btn-sm btn-warning", role: "button" %>
            <%= link_to 'Destroy', admin_lesson_path(lesson), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger", role: "button" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'New Lesson', new_admin_lesson_path, role: "button", class: "btn btn-lg btn-success" %>
