<h1>Editing Lesson</h1>

<%= simple_form_for @lesson, url: admin_lesson_path(@lesson) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>


<%= link_to 'Show', admin_lessons_path(@lesson) %> |
<%= link_to 'Back', admin_lessons_path %>
