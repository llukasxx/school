<h1>New Lesson</h1>

<%= simple_form_for @lesson, url: admin_lessons_path do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-success", role: "button" %>
    <%= link_to '<< Back', admin_lessons_path, class: "btn btn-primary go-right", role: "button" %>
  </div>
<% end %>

<br>


