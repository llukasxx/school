<%= link_to "<< Back", admin_groups_path, role: "botton", class: "btn btn-primary btn-lg"%> <br> <br>

<div class="panel panel-danger">
	<div class="panel-heading table-head">
		Group info
	</div>
	<ul class="list-group">
	  <li class="list-group-item">Name: <%= @group.name%></li>
	  <li class="list-group-item">Teachers: <% @group.teachers.each do |t| %>
	  																				<%= link_to "#{t.first_name} #{t.last_name},", admin_teacher_path(t) %>
	  																			<% end %>
	  </li>
	  <li class="list-group-item">Students: <% @group.students.each do |s| %>
	  																				<%= link_to "#{s.first_name} #{s.last_name},", admin_student_path(s) %>
	  																			<% end %>
	  </li>
	</ul>

</div>
<%= link_to 'Edit', edit_admin_group_path(@group), class: "btn btn-warning", role: "button" %>